
// alphabet

["a", "i", "o", "e", "u", "l", "v", "n", "m", "s", "k", "r", "c", "t", "b", "p", "f", "g", "z", "x", "wildcard"]


// main parts of speech

{

	// object or noun => what
	"obiekta": "-a",

	// state or adjective => what kind
	"stata": "-iv",

	// function or verb => to do what
	"funkcia": {

		"presenta": "-al",
		"pasta": "-alo",
		"futura": "-ale"

	},		

	// propoerty or adverb => how
	"properta": "-o"

}


// simplified English equivalents

{

	"pronouns": {

		"I": "on",
		"you": "en",
		"he": "an"

	},

	"prepostions": {

		"at": "at",
		"above": "ot",
		"below": "ut",
		"before / in front": "ant",
		"after / past": "post"

	},

	"conjunctions": {

		// for, and, nor, but, or, yet, so
		"and": "i", 
		"or": "o", 
		"but": "a",
		"If": "e",
		"reserved": "u"

	},

	"whatevers": {

		"this": "id",
		"that": "od",

		"what": "ke",
		"where/when": "ko", // kot --> time;  ko* --> space
		
		"more": "mas",
		"less": "les"

	},

	"vectors": {

		"to": "ko",
		"from": "ok",
		"over": "oko" // make not dependent on "to" and "from"

	},

	"yesOrNo": {

		"yes": "da",
		"no": "ka"

	}

}


